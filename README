config.ru

  require "io/trace"
  require "logger"
  require "net/http"

  app = lambda do |env|
    resp = Net::HTTP.get('www.wildfireapp.com', '/')
    [200, {"Content-Type" => "text/plain"}, [resp]]
  end

  use IO::Trace::Middleware, :strategy => :WRITE, :stream => Logger.new(STDOUT)
  run app

